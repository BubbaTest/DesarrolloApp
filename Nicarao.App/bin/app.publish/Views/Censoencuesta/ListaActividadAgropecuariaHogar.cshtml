@using Gaia.Helpers;

@{
    string addres = "apiAlexaLocal";
}

<style>
    .dataTables_empty {
        display: none;
    }

    table.cell-border {
        width: 100%;
        clear: both;
    }

    #dtRequerimiento.cell-border th {
        padding: 5px;
        border: 1px solid #fff;
    }

    #dtRequerimiento.cell-border thead th {
        text-align: center;
        background: #e0e0e0;
        color: dodgerblue;
    }

    #dtRequerimiento.cell-border tbody td {
        text-align: center;
    }
</style>

<div class="container" id="contentListaActividadAgropecuaria">
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
@<script type="text/javascript">
     var datos;
     function cargaTipoObjeto2() {
        $.ajax({
            url: obtenerURL('@HtmlEncriptUrl.EncodeUrl(addres, "catalogos/Listar/{seccion}", "get")'),
            type: "get",
            dataType: "json",
            data: { "seccion": "ActividadAgropecuariaHogarTabla" },
            success: function (result) {
                datos = result[0].JsonDatos;
                TablaActividadAgropecuaria();
            },
            error: function (data) {
                alertify.alert().destroy();
                alertify.alert('Confirmación', data.Mensaje);
                alertify.alert().setting('modal', true);
            }
        })
    };

    $(document).ready(function () {
        $(".mask").inputmask('Regex', { regex: "^[0-9]+$" });

        cargaTipoObjeto2();
    })

    function TablaActividadAgropecuaria() {
        var times = [""];
        $('#contentListaActividadAgropecuaria').empty();
        $('#contentListaActividadAgropecuaria').load(obtenerURL("/Censoencuesta/_ListaActividadAgropecuariaHogar"), function (response, status, xhr) {
            if (status === "success") {
                //$(document).ready(function () {
                var table = $('#dtActAgr').DataTable({
                    responsive: true,
                    autoWidth: false,
                    /*scrollX: true,*/
                    columnDefs: [
                        {
                            targets: [0],
                            render: function (d, t, r) {
                                return '<textarea  class="form-control" id="txtNombres" autocomplete = "off"></textarea>'
                            }, orderable: false, searchable: false
                    },
                    {
                        targets: [1],
                        render: function (d, t, r) {
                            return '<textarea  class="form-control" id="txtNombresFinca" autocomplete = "off"></textarea>'
                        }, orderable: false, searchable: false

                    },
                    {
                        targets: [2],
                        render: function (d, t, r) {
                            return '<textarea  class="form-control" id="txtDireccion" autocomplete = "off"></textarea>'
                        }, orderable: false, searchable: false

                    },
                    {
                        targets: [3],
                        render: function (d, t, r) {
                            var $select = $('<select class="form-control sel" id="ddlDepartamento"></select>',);
                            var $option = $("<option></option>", {
                                "text": "",
                                "value": ""
                            });
                            $select.append($option);

                            $.each(datos.JsonDepartamentos, function (k, v) {
                                var $option = $("<option></option>", {
                                    "text": v.Descripcion,
                                    "value": v.Id
                                });
                                //if (d.CodDepartamento === v.CodDepartamento) {
                                //    $option.attr("selected", "selected")
                                //}


                                $select.append($option);
                            });
                            current_row = this;
                            return $select.prop("outerHTML");
                        }
                    },
                    {
                        targets: [4],
                        render: function (d, t, r) {
                            var $select = $('<select class="form-control sel" id="ddlMunicipio"></select>', {
                                "id": r[0] + "start",
                                "value": d
                            });
                            $.each(times, function (k, v) {
                                var $option = $("<option></option>", {
                                    "text": v,
                                    "value": v
                                });
                                if (d === v) {
                                    $option.attr("selected", "selected")
                                }
                                $select.append($option);
                            });
                            return $select.prop("outerHTML");
                        }
                    },
                    {
                        targets: [5],
                        render: function (d, t, r) {
                            var $select = $('<select class="form-control sel" id="ddlComarca"></select>', {
                                "id": r[0] + "start",
                                "value": d
                            });
                            $.each(times, function (k, v) {
                                var $option = $("<option></option>", {
                                    "text": v,
                                    "value": v
                                });
                                if (d === v) {
                                    $option.attr("selected", "selected")
                                }
                                $select.append($option);
                            });
                            return $select.prop("outerHTML");
                        }
                    },
                    {
                        targets: [6],
                        render: function (d, t, r) {
                            var $select = $('<select class="form-control sel" id="ddlLocalidad"></select>', {
                                "id": r[0] + "start",
                                "value": d
                            });
                            $.each(times, function (k, v) {
                                var $option = $("<option></option>", {
                                    "text": v,
                                    "value": v
                                });
                                if (d === v) {
                                    $option.attr("selected", "selected")
                                }
                                $select.append($option);
                            });
                            return $select.prop("outerHTML");
                        }
                    },                      

                    {
                        targets: [7],
                        render: function (data, type, row) {
                            return '<button class="btn btn-primary" style="margin-right:10px" data-tabcontinuar="data-tabcontinuar" id="btnGuardaCaracteristica"><span class="fa fa-floppy-o"></span></button>';
                        }
                    }
                    ],
                    fnInitComplete: function (settings, json) {
                        $(".sel").select2({
                            placeholder: "Seleccione",
                            allowClear: true,
                        });

                        $(".mask").inputmask('Regex', { regex: "^[0-9]+$" });
                    },
                    fnRowCallback: function (row, data, index) { //null

                    },
                    language: { url: obtenerURL("/Json/Spanish.json") }, lengthMenu: [5], bLengthChange: false, searching: true
                });
                //});
            }
        });
    }
</script>
, true);
}



