@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
@<script type="text/javascript">
     $(document).ready(function () {
         $(".sel").select2({
             placeholder: "Seleccione Opción",
             allowClear: true,
         });

         $(".mask").inputmask('Regex', { regex: "^[0-9]+$" });

         cargaTipoObjeto();
     })

     function cargaTipoObjeto() {
         $.ajax({
             url: obtenerURL('@HtmlEncriptUrl.EncodeUrl(addres, "catalogos/Listar/{seccion}", "get")'),
             type: "get",
             dataType: "json",
             data: { "seccion": "CaracteristicasHogar" },
             success: function (result) {
                 dato = result[0].JsonDatos;
                 $(dato.JsonCombustibleCocinar).each(function () {
                     $("#ddlCombustibleUsadoCocinar").append($("<option></option>").val(this.Id).html(this.Descripcion)).select2("val", "ca");
                 });
                 $(dato.JsonTipoServicioHigienico).each(function () {
                     $("#ddlTipoServicioHigienico").append($("<option></option>").val(this.Id).html(this.Descripcion)).select2("val", "ca");
                 });
                 $(dato.JsonEliminaBasura).each(function () {
                     $("#ddlEliminarBasura").append($("<option></option>").val(this.Id).html(this.Descripcion)).select2("val", "ca");
                 });             
                 $(dato.JsonSiNo).each(function () {
                     $("#ddlRemesasExterior").append($("<option></option>").val(this.Id).html(this.Descripcion)).select2("val", "ca");
                     $("#ddlRemesasHogaresPais").append($("<option></option>").val(this.Id).html(this.Descripcion)).select2("val", "ca");
                     $("#ddlBeneficioProgramaGobierno").append($("<option></option>").val(this.Id).html(this.Descripcion)).select2("val", "ca"); 
                 });             
             
             },
             error: function (data) {
                 alertify.alert().destroy();
                 alertify.alert('Confirmación', data.Mensaje);
                 alertify.alert().setting('modal', true);
             }
         })
    };

    $("#ddlCombustibleUsadoCocinar").on("select2:select", function (a) {
        var strcombustibleUsadoCocinar = $(this).val();
        if (strcombustibleUsadoCocinar == 6) {
            $('#txtCualCombustibleUsaCocinar').prop("disabled", false);
        }
        else { $('#txtCualCombustibleUsaCocinar').prop("disabled", true); }
    }); 

    $("#ddlEliminarBasura").on("select2:select", function (a) {
        var strcombustibleUsadoCocinar = $(this).val();
        if (strcombustibleUsadoCocinar == 9) {
            $('#txtCualEliminaBasura').prop("disabled", false);
        }
        else { $('#txtCualEliminaBasura').prop("disabled", true); }
    }); 
    
</script>
, true);
}

