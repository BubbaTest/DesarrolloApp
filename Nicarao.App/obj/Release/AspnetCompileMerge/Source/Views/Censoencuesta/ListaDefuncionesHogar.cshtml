                                    });
                                    //if (d.CodDepartamento === v.CodDepartamento) {
                                    //    $option.attr("selected", "selected")
                                    //}


                                    $select.append($option);
                                });
                                current_row = this;
                                return $select.prop("outerHTML");
                            }
                        },                            
                        {
                            targets: [4],
                            render: function (d, t, r) {
                                var $select = $('<select class="form-control sel" id="ddlConstancia"></select>',);
                                var $option = $("<option></option>", {
                                    "text": "",
                                    "value": ""
                                });
                                $select.append($option);

                                $.each(datos.JsonSiNo, function (k, v) {
                                    var $option = $("<option></option>", {
                                        "text": v.Descripcion,
                                        "value": v.Id
                                    });
                                    //if (d.CodDepartamento === v.CodDepartamento) {
                                    //    $option.attr("selected", "selected")
                                    //}


                                    $select.append($option);
                                });
                                current_row = this;
                                return $select.prop("outerHTML");
                            }
                        },
                        {
                            targets: [5],
                            render: function (d, t, r) {
                                var $select = $('<select class="form-control sel" id="ddlInscribio"></select>',);
                                var $option = $("<option></option>", {
                                    "text": "",
                                    "value": ""
                                });
                                $select.append($option);

                                $.each(datos.JsonSiNo, function (k, v) {
                                    var $option = $("<option></option>", {
                                        "text": v.Descripcion,
                                        "value": v.Id
                                    });
                                    //if (d.CodDepartamento === v.CodDepartamento) {
                                    //    $option.attr("selected", "selected")
                                    //}


                                    $select.append($option);
                                });
                                current_row = this;
                                return $select.prop("outerHTML");
                            }
                        },
                        {
                            targets: [6],
                            render: function (d, t, r) {
                                var $select = $('<select class="form-control sel" id="ddlMurio"></select>',);
                                var $option = $("<option></option>", {
                                    "text": "",
                                    "value": ""
                                });
                                $select.append($option);

                                $.each(datos.JsonMurioDurante, function (k, v) {
                                    var $option = $("<option></option>", {
                                        "text": v.Descripcion,
                                        "value": v.Id
                                    });
                                    //if (d.CodDepartamento === v.CodDepartamento) {
                                    //    $option.attr("selected", "selected")
                                    //}


                                    $select.append($option);
                                });
                                current_row = this;
                                return $select.prop("outerHTML");
                            }
                        },
                        {
                            targets: [7],
                            render: function (data, type, row) {
                                return '<button class="btn btn-primary" style="margin-right:10px" data-tabcontinuar="data-tabcontinuar" id="btnGuardaCaracteristica"><span class="fa fa-floppy-o"></span></button>';
                            }
                        }
                    ],
                    fnInitComplete: function (settings, json) {
                        $(".sel").select2({
                            placeholder: "Seleccione",
                            allowClear: true,
                        });

                        $(".mask").inputmask('Regex', { regex: "^[0-9]+$" });
                    },
                    fnRowCallback: function (row, data, index) { //null

                    },
                    language: { url: obtenerURL("/Json/Spanish.json") }, lengthMenu: [5], bLengthChange: false, searching: true
                });
                //});
            }
        });
    }
</script>
, true);
}



