@using Gaia.Helpers;

@{
    string addres = "apiAlexaLocal";
}

<style>
    .dataTables_empty {
        display: none;
    }

    table.cell-border {
        width: 100%;
        clear: both;
    }

    #dtRequerimiento.cell-border th {
        padding: 5px;
        border: 1px solid #fff;
    }

    #dtRequerimiento.cell-border thead th {
        text-align: center;
        background: #e0e0e0;
        color: dodgerblue;
    }

    #dtRequerimiento.cell-border tbody td {
        text-align: center;
    }
</style>

<div class="content" id="contentListaDefuncion">
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
@<script type="text/javascript">
     var datos;
     function cargaTipoObjeto2() {
        $.ajax({
            url: obtenerURL('@HtmlEncriptUrl.EncodeUrl(addres, "catalogos/Listar/{seccion}", "get")'),
            type: "get",
            dataType: "json",
            data: { "seccion": "DefuncionesHogarTabla" },
            success: function (result) {
                datos = result[0].JsonDatos;
                TablaDefunciones();
            },
            error: function (data) {
                alertify.alert().destroy();
                alertify.alert('Confirmación', data.Mensaje);
                alertify.alert().setting('modal', true);
            }
        })
    };

    $(document).ready(function () {
        $(".mask").inputmask('Regex', { regex: "^[0-9]+$" });

        cargaTipoObjeto2();
    })

    function TablaDefunciones() {
        $('#contentListaDefuncion').empty();
        $('#contentListaDefuncion').load(obtenerURL("/Censoencuesta/_ListaDefuncionesHogar"), function (response, status, xhr) {
            if (status === "success") {
                //$(document).ready(function () {
                var table = $('#dtDefunciones').DataTable({
                    responsive: true,
                    AautoWidth: false,
                    //scrollX: true,
                    columnDefs: [
                        {
                            width: "20px",
                            targets: [0],
                            render: function (d, t, r) {
                                return '<input type="text" class="form-control" id="txt" autocomplete = "off"></input>'
                            }, orderable: false, searchable: false

                        },
                        {
                            width: "10px",
                            targets: [1],
                            render: function (d, t, r) {
                                return '<input type="date" class="form-control" id="txtFecha"></input>'
                            }, orderable: false, searchable: false

                        },
                        {
                            width: "10px",
                            targets: [2],
                            render: function (d, t, r) {
                                return '<input type="text" class="form-control mask" id="txtEdad" maxlength="3" autocomplete = "off" Value="0"></input>'
                            }, orderable: false, searchable: false

                        },
                        {
                            targets: [3],
                            render: function (d, t, r) {
                                var $select = $('<select class="form-control sel" id="ddlvm"></select>',);
                                var $option = $("<option></option>", {
                                    "text": "",
                                    "value": ""
                                });
                                $select.append($option);

                                $.each(datos.JsonVaronMujer, function (k, v) {
                                    var $option = $("<option></option>", {
