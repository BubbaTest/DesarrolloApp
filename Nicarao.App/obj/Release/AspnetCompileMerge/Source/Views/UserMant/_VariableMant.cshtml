@model  PJN.DAL.Model.GENERAL.VariableFormulario

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="has-float-label" data-toggle="tooltip" data-placement="top" title="VariableId">
                            @Html.TextBoxFor(model => model.VariableId, new { id = "txtVariableId", PlaceHolder = "VariableId", @class = "form-control", autocomplete = "off" })
                            <span>VariableId</span>
                        </label>
                        @Html.ValidationMessage("variableid", "* Campo Requerido *", new { id = "lblvariableid", @style = "color:red; display: none;" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="has-float-label" data-toggle="tooltip" data-placement="top" title="Descripcion">
                            @Html.TextBoxFor(model => model.Descripcion, new { id = "txtVDescripcion", PlaceHolder = "Descripcion", @class = "form-control" })
                            <span>Descripción</span>
                        </label>
                        @Html.ValidationMessage("vdescripcion", "* Campo Requerido *", new { id = "lblvdescripcionr", @style = "color:red; display: none;" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="has-float-label" data-toggle="tooltip" data-placement="top" title="Clasificación">
                            @Html.DropDownListFor(model => model.Clasificacion, new SelectList(ViewBag.clasificacion as System.Collections.IEnumerable, "Value", "Text"),
                                "", new { id = "ddlVClasificacion", @class = "form-control sel", @style = "width:100%;" })
                            <span>Clasificación:</span>
                        </label>
                        @Html.ValidationMessage("vclasificacion", "* Campo Requerido *", new { id = "lblvclasificacion", @style = "color:red; display: none;" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="has-float-label" data-toggle="tooltip" data-placement="top" title="Censo/Encuesta">
                            @Html.DropDownListFor(model => model.CenEnc, new SelectList(ViewBag.CenEnc as System.Collections.IEnumerable, "Id", "Descripcion"),
                                "", new { id = "ddlVCenEnc", @class = "form-control sel", @style = "width:100%;" })
                            <span>Censo/Encuesta:</span>
                        </label>
                        @Html.ValidationMessage("vcenenc", "* Campo Requerido *", new { id = "lblvcenenc", @style = "color:red; display: none;" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-center" id="ActivoVar">
                <label class="input-control checkbox small-check">
                    <input type="checkbox" id="activovar" value="true" checked>
                    <span class="check"></span>
                    <span class="caption">Activo</span>
                </label>
                <label class="input-control checkbox small-check">
                    <input type="checkbox" id="inactivovar" value="false">
                    <span class="check"></span>
                    <span class="caption">Inactivo</span>
                </label>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row" style=" height: 100px; align-content: center;">
                        <div class="col-md-12 d-flex justify-content-center" id="rowButtons">
                            <button class="btn btn-primary" style="margin-right:10px;" data-tabcontinuar="data-tabcontinuar" id="btnGuardaVariable" onclick="AgregarVariable()">
                                <span>Guardar</span>
                                <span class="fa fa-database"></span>
                            </button>
                            <button class="btn btn-secondary" style="margin-right:10px; display:none" data-tabcontinuar="data-tabcontinuar" id="btnActualizarVariable" onclick="ActualizarVariable('Actualiza')">
                                <span>Actualizar</span>
                                <span class="fa fa-database"></span>
                            </button>
                            <button class="btn btn-success" style="margin-right:10px;" data-tabcontinuar="data-tabcontinuar" id="btnNuevoVariable" onclick="NuevaVariable()">
                                <span>Nuevo</span>
                                <span class="fa fa-plus"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
                function ActualizarVariable() {
                   var bandera = true;
                    var Activo;
                    if ($('#txtVariableId').val().toString().length < 1) {
                        $("#lblvariableid").show();
                        bandera = false;
                    }

                    if ($('#txtVDescripcion').val().toString().length < 1) {
                        $("#lblvdescripcion").show();
                        bandera = false;
                    }

                    if ($('#ddlVClasificacion').val()== "" || $('#ddlVClasificacion').val()==null) {
                        $("#lblvclasificacion").show();
                        bandera = false;
                    }

                    if ($('#ddlVCenEnc').val() == "" || $('#ddlVCenEnc').val() == null) {
                        $("#lblvcenenc").show();
                        bandera = false;
                    }  

                    if (bandera == true) {
                        showalertify();
                        $("#lblvariableid").hide();
                        $("#lblvdescripcion").hide();
                        $("#lblvclasificacion").hide();
                        $("#lblvcenenc").hide();

                        var listaCheck = $("#ActivoVar input[type='checkbox']");
                        $.each(listaCheck, function (index, value) {
                            if ($(value).prop('checked') === true) {
                                Activo = value.value;
                            }
                        })

                        var variableson = JSON.stringify({ "VariableId": $('#txtVariableId').val(), "Descripcion": $('#txtVDescripcionR').val(), "Activo": Activo, "Clasificacion": $('#ddlVClasificacion').val(), "CenEnc": $('#ddlVCenEnc').val() });
                        var url = obtenerURL('/UserMant/ActualizarVariable?variablejson=' + variableson);
                        $.post(url)
                            .done(function (data) {
                                var listado = JSON.parse(data);
                                if (listado.Resultado === "true") {
                                    $('#frVariables').empty();
                                   $('#frVariables').load(obtenerURL("/UserMant/ListaVariable"))
                                    alertify.alert().destroy();
                                    alertify.alert('Confirmación', listado.Mensaje);
                                    alertify.alert().setting('modal', true);
                                }
                                else {
                                    alertify.alert().destroy();
                                    alertify.alert('Advertencia', listado.Mensaje);
                                    alertify.alert().setting('modal', true);
                                }
                            })
                        closealertify();
                    }
                    else {
                        alertify.confirm().destroy();
                        alertify.confirm('Llenar todos los campos obligatorios!').set('basic', true);
                        alertify.confirm().setting('modal', true);
                    }
                }

                function AgregarVariable() {
                    var bandera = true;
                    var Activo;
                    if ($('#txtVariableId').val().toString().length < 1) {
                        $("#lblvariableid").show();
                        bandera = false;
                    }

                    if ($('#txtVDescripcion').val().toString().length < 1) {
                        $("#lblvdescripcion").show();
                        bandera = false;
                    }

                    if ($('#ddlVClasificacion').val()== "" || $('#ddlVClasificacion').val()==null) {
                        $("#lblvclasificacion").show();
                        bandera = false;
                    }

                    if ($('#ddlVCenEnc').val() == "" || $('#ddlVCenEnc').val() == null) {
                        $("#lblvcenenc").show();
                        bandera = false;
                    } 

                    if (bandera == true) {
                        showalertify();
                        $("#lblvariableid").hide();
                        $("#lblvdescripcion").hide();
                        $("#lblvclasificacion").hide();
                        $("#lblvcenenc").hide();

                        var listaCheck = $("#ActivoVar input[type='checkbox']");
                        $.each(listaCheck, function (index, value) {
                            if ($(value).prop('checked') === true) {
                                Activo = value.value;
                            }
                        })

                        var variableson = JSON.stringify({ "VariableId": $('#txtVariableId').val(), "Descripcion": $('#txtVDescripcion').val(), "Activo": Activo, "Clasificacion": $('#ddlVClasificacion').val(), "CenEnc": $('#ddlVCenEnc').val() });
                        var url = obtenerURL('/UserMant/AgregarVariable?variablejson=' + variableson);
                        $.post(url)
                           .done(function (data) {
                               var listado = JSON.parse(data);
                               if (listado.Resultado === "true") {
                                   $('#frVariables').empty();
                                   $('#frVariables').load(obtenerURL("/UserMant/ListaVariable"));
                                   alertify.alert().destroy();
                                   alertify.alert('Confirmación', listado.Mensaje);
                                   alertify.alert().setting('modal', true);
                               }
                               else {
                                   alertify.alert().destroy();
                                   alertify.alert('Advertencia', listado.Mensaje);
                                   alertify.alert().setting('modal', true);
                               }
                           })
                        closealertify();
                    }
                    else {
                        alertify.confirm().destroy();
                        alertify.confirm('Llenar todos los campos obligatorios!').set('basic', true);
                        alertify.confirm().setting('modal', true);
                    }
                }

                function NuevaRol() {
                    $('#txtVariableId').prop("disabled", false);
                    $('#txtVariableId').val("");
                    $('#txtVDescripcion').val("");
                    $('#ddlVClasificacion').select2("val", "ca");
                    $('#ddlVCenEnc').select2("val", "ca");
                    $('#ActivoVar input[type=checkbox]').prop("checked", false);
                    $('#activovar').prop('checked', true);
                    $('#btnActualizarVariable').hide();
                    $('#btnGuardaVariable').show();
                }

                $(document).ready(function () {
                    $('#ActivoVar input[type=checkbox]').click(function () {
                        $('#ActivoVar input[type=checkbox]').prop("checked", false);
                        $(this).prop("checked", true);
                    });

                    $(".sel").select2({
                        placeholder: "Seleccione Opción",
                        allowClear: true,
                    });
                })
        </script>
    , true);
}

